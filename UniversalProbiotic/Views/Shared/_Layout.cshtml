<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Universal Probiotics</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</head>
<body class="pt-0">
    <nav class="navbar navbar-expand-lg position-sticky navbar-light bg-light" style="z-index:500;">
        @Html.ActionLink("Universal Probiotics", "Index", "Home", new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-stretch">

            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link" })
                </li>

                <li class="nav-item">
                    @Html.ActionLink("About Us", "About", "Home", new { @class = "nav-link" })
                </li>

                <li class="nav-item dropdown " style="z-index:999; position:relative; overflow:visible;">
                    <a class="nav-link dropdown-toggle" style="z-index:999;" href="#" id="navbarDrop" data-toggle="dropdown" aria-haspopup="true">Products</a>
                    <div class="dropdown-menu" style="z-index:1000; overflow:visible;  right:0; left:auto;">
                        @Html.ActionLink("Dogs", "ViewSingleProduct", "Home", new { id = 1 }, new { @class = "dropdown-item", @style="z-index:1000; overflow: visible; position:relative;"})
                        @Html.ActionLink("Cats", "ViewSingleProduct", "Home", new { id = 2 }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Goats", "ViewSingleProduct", "Home", new { id = 3 }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Horses", "ViewSingleProduct", "Home", new { id = 4 }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Pigs", "ViewSingleProduct", "Home", new { id = 5 }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Chickens and Turkeys", "ViewSingleProduct", "Home", new { id = 6 }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Cows", "ViewSingleProduct", "Home", new { id = 7 }, new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("View All", "ViewAllProducts", "Home", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
            <form class="form-inline">
                @Html.ActionLink("Cart", "ViewCart", "Home", null, new { @class = "btn btn-sm btn-outline-secondary" })
            </form>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year Universal Probiotics. All Rights Reserved</p>
        </footer>
    </div>

</body>
</html>
